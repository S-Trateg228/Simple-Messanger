#:kivy 2.1.0
<LoginScreen>:
    name: "login"
    login_label: login_label
    login: login
    password_label: password_label
    password: password
    AnchorLayout:
        GridLayout:
            rows: 2
            size: 200, 200
            size_hint_x: None
            size_hint_y: None
            GridLayout:
                cols: 2
                Label:
                    id: login_label
                    size_hint_x: None
                    width: 80
                    text: "Login:"
                TextInput:
                    id: login
                Label:
                    id: password_label
                    size_hint_x: None
                    width: 80
                    text: "Password:"
                TextInput:
                    id: password
                    password: True
            Button:
                id: button
                size_hint_y: None
                height: 50
                text: "Submit!"
                on_press: root.sign_in()
                

<MainMenuScreen>:
    name: "main_menu"
    scroll: scroll
    AnchorLayout:
        anchor_y: "bottom"
        anchor_x: "center"
        ScrollView:
            id: scroll
            size_hint: (1, 0.9)
            do_scroll_x: False
            do_scroll_y: True
            BoxLayout:
                orientation: "vertical"
                spacing: 40
                size_hint_y: None

<Chat>:
    chat_icon: chat_icon
    chat_name: chat_name
    enter_chat: enter_chat
    size_hint_y: None
    height: 20
    Label:
        id: chat_name
        center: root.center
        size_hint_y: None
        height: 20
    Image:
        id: chat_icon
        pos: (0, root.y)
        size_hint_y: None
        height: 20
    Button:
        id: enter_chat
        on_press: root.abc()
        height: 20
        size_hint_x: None
        center: root.center
        background_color: (0, 0, 0, 0)
